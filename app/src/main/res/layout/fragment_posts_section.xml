<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription">

    <LinearLayout
        style="@style/match_parent_style"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/toolbar_style">

            <ImageView
                style="@style/toolbar_icon_style"
                android:id="@+id/image_view_stories"
                android:src="@drawable/toolbar_icon_stories"/>

            <ImageView
                style="@style/toolbar_logo_style"
                android:src="@drawable/toolbar_logo"/>

            <ImageView
                style="@style/toolbar_icon_style"
                android:id="@+id/image_view_direct"
                android:layout_alignParentEnd="true"
                android:src="@drawable/toolbar_icon_direct"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            style="@style/match_parent_style"
            android:id="@+id/recycler_view_feed"
            tools:listitem="@layout/recycler_view_post_item"/>
    </LinearLayout>
</layout>